# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Load the main html page for the single page app
GET     /                               kurtome.dote.server.controllers.HomeController.index

# Load the javascript file for the web worker
GET     /worker.js                      kurtome.dote.server.controllers.HomeController.workerJs()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)


POST     /api/v1/hello                  kurtome.dote.server.controllers.api.HelloController.protoAction
POST     /api/v1/add-podcast            kurtome.dote.server.controllers.api.AddPodcastController.protoAction
POST     /api/v1/get-dotable-details    kurtome.dote.server.controllers.api.GetDotableDetailsController.protoAction
POST     /api/v1/get-dotable-list       kurtome.dote.server.controllers.api.GetDotableListController.protoAction
POST     /api/v1/get-feed               kurtome.dote.server.controllers.api.GetFeedController.protoAction
POST     /api/v1/search                 kurtome.dote.server.controllers.api.SearchController.protoAction
POST     /api/v1/create-login-link      kurtome.dote.server.controllers.api.LoginLinkController.protoAction
POST     /api/v1/set-dote               kurtome.dote.server.controllers.api.SetDoteController.protoAction
POST     /api/v1/set-follow             kurtome.dote.server.controllers.api.SetFollowController.protoAction
POST     /api/v1/get-follower-summary   kurtome.dote.server.controllers.api.GetFollowerSummaryController.protoAction

GET      /logout                        kurtome.dote.server.controllers.LogoutRedirectController.logout
GET      /lc/:email/:code               kurtome.dote.server.controllers.LoginRedirectController.login(email: String, code: String)

GET     /*route                         kurtome.dote.server.controllers.HomeController.redirectToRoot(route: String)
