# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           kurtome.dote.server.controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


POST     /api/v1/hello              kurtome.dote.server.controllers.api.HelloController.protoAction
POST     /api/v1/add-podcast        kurtome.dote.server.controllers.api.AddPodcastController.protoAction

GET     /*route                     kurtome.dote.server.controllers.HomeController.redirectToRoot(route: String)
